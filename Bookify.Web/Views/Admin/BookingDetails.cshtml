@model Bookify.Data.Models.Booking
@{
    ViewData["Title"] = "Booking Details";
}

<div class="container">
    <h2 class="mb-4">Booking Details #@Model.Id</h2>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Booking Information</h4>
                    <hr>
                    <dl class="row">
                        <dt class="col-sm-4">Customer:</dt>
                        <dd class="col-sm-8">@Model.User.Email (@Model.User.FirstName @Model.User.LastName)</dd>
                        
                        <dt class="col-sm-4">Room:</dt>
                        <dd class="col-sm-8">@Model.Room.RoomType.Name - Room @Model.Room.RoomNumber</dd>
                        
                        <dt class="col-sm-4">Check-in Date:</dt>
                        <dd class="col-sm-8">@Model.CheckInDate.ToString("MM/dd/yyyy")</dd>
                        
                        <dt class="col-sm-4">Check-out Date:</dt>
                        <dd class="col-sm-8">@Model.CheckOutDate.ToString("MM/dd/yyyy")</dd>
                        
                        <dt class="col-sm-4">Number of Nights:</dt>
                        <dd class="col-sm-8">@((Model.CheckOutDate - Model.CheckInDate).Days)</dd>
                        
                        <dt class="col-sm-4">Total Price:</dt>
                        <dd class="col-sm-8"><strong>$@Model.TotalPrice.ToString("F2")</strong></dd>
                        
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Confirmed" ? "success" : Model.Status == "Cancelled" ? "danger" : Model.Status == "Completed" ? "info" : "warning")">
                                @Model.Status
                            </span>
                        </dd>
                        
                        <dt class="col-sm-4">Booking Date:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")</dd>
                        
                        @if (Model.ConfirmedAt.HasValue)
                        {
                            <dt class="col-sm-4">Confirmed At:</dt>
                            <dd class="col-sm-8">@Model.ConfirmedAt.Value.ToString("MM/dd/yyyy HH:mm")</dd>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                        {
                            <dt class="col-sm-4">Special Requests:</dt>
                            <dd class="col-sm-8">@Model.SpecialRequests</dd>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.StripePaymentIntentId))
                        {
                            <dt class="col-sm-4">Stripe Payment ID:</dt>
                            <dd class="col-sm-8">@Model.StripePaymentIntentId</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Actions</h5>
                    
                    <form asp-action="UpdateBookingStatus" method="post" class="mb-3">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="status" class="form-label">Update Status:</label>
                            <select name="status" id="status" class="form-select" required>
                                <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                                <option value="Confirmed" selected="@(Model.Status == "Confirmed")">Confirmed</option>
                                <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                                <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Update Status</button>
                    </form>
                    
                    <form asp-action="DeleteBooking" asp-route-id="@Model.Id" method="post" 
                          onsubmit="return confirm('Are you sure you want to delete this booking?');">
                        <button type="submit" class="btn btn-danger w-100 mb-2">Delete Booking</button>
                    </form>
                    
                    <a asp-action="Bookings" class="btn btn-secondary w-100">Back to Bookings</a>
                </div>
            </div>
        </div>
    </div>
</div>

