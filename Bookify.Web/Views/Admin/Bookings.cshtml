@model IEnumerable<Bookify.Data.Models.Booking>
@{
    ViewData["Title"] = "All Bookings";
}

<div class="container">
    <h2 class="mb-4">All Bookings</h2>
    
    <div class="table-responsive">
        <table class="table table-striped" id="bookingsTable">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Customer</th>
                    <th>Room</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Booking Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.Id</td>
                        <td>@booking.User.Email</td>
                        <td>@booking.Room.RoomType.Name - @booking.Room.RoomNumber</td>
                        <td>@booking.CheckInDate.ToString("MM/dd/yyyy")</td>
                        <td>@booking.CheckOutDate.ToString("MM/dd/yyyy")</td>
                        <td>$@booking.TotalPrice.ToString("F2")</td>
                        <td>
                            <span class="badge bg-@(booking.Status == "Confirmed" ? "success" : booking.Status == "Cancelled" ? "danger" : booking.Status == "Completed" ? "info" : "warning")">
                                @booking.Status
                            </span>
                        </td>
                        <td>@booking.CreatedAt.ToString("MM/dd/yyyy")</td>
                        <td>
                            <a asp-action="BookingDetails" asp-route-id="@booking.Id" class="btn btn-sm btn-info">View</a>
                            <form asp-action="DeleteBooking" asp-route-id="@booking.Id" method="post" class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to delete this booking?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#bookingsTable').DataTable({
                order: [[7, 'desc']] // Sort by booking date descending
            });
        });
    </script>
}
